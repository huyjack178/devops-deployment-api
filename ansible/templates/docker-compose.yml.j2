version: '3.3'
services:
  deployment_api:
    image: registry.nexdev.net:5050/nexcel/nexops/deployment-api:{{env}}-latest
    deploy:
      mode: replicated
#      endpoint_mode: dnsrr
      replicas: 6
      placement:
        constraints:
          - node.labels.NEXOPS_LOW_STORAGE == yes
    networks:
      - swarm_{{org | lower}}_{{env | lower}}
networks:
  swarm_{{org | lower}}_{{env | lower}}:
    external: true
